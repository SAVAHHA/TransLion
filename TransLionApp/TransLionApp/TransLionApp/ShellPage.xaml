             xmlns:pages="clr-namespace:TransLionApp.Pages"
             mc:Ignorable="d"
             x:Class="TransLionApp.ShellPage">




    <FlyoutItem FlyoutIcon="None" Icon="None" Title="Home page" Shell.BackgroundColor="White"
