    </FlyoutItem>

    <FlyoutItem Title="1e en 2e spoor" Shell.BackgroundColor="White"
             Shell.ForegroundColor="Black">
        <ShellContent ContentTemplate="{DataTemplate pages:Page1eEn2eSpoor}"></ShellContent>
    </FlyoutItem>

    <FlyoutItem Title="Schema wet verbetering" Shell.BackgroundColor="White"
             Shell.ForegroundColor="Black">
